<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="tab">
        <attr name="name" format="string" />
        <attr name="image_drawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="tabbar">
        <attr name="text_size" format="dimension" />
        <attr name="image_height" format="dimension" />
        <attr name="image_width" format="dimension" />
        <attr name="icons_color" format="color" />
        <attr name="background_color" format="color" />
        <attr name="select_color" format="color" />
        <attr name="corner_radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="imagelist_view">
        <attr name="max_items_count" format="integer" />
        <attr name="item_border_color" format="color" />
        <attr name="set_offset" format="dimension" />
        <attr name="item_height" format="dimension" />
        <attr name="item_width" format="dimension" />
        <attr name="item_text_size" format="integer" />
    </declare-styleable>
</resources>