<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_first="true">
        <shape>
            <corners android:bottomLeftRadius="10dp" android:topLeftRadius="10dp" />
            <solid android:color="@color/blue" />
        </shape>
    </item>
    <item android:state_last="true">
        <shape>
            <corners android:bottomRightRadius="10dp" android:topRightRadius="10dp" />
            <solid android:color="@color/blue" />
        </shape>
    </item>
    <item android:state_middle="true">
        <shape>
            <solid android:color="@color/blue" />
        </shape>
    </item>
</selector>