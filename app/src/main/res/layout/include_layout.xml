<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll"
    android:background="@color/colorPrimaryDark">

    <GridLayout
        android:isScrollContainer="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/grid"
        android:columnCount="3">

        <android.support.v7.widget.CardView
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="5sp"
            android:layout_margin="5sp"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:gravity="center"
                android:padding="5sp"
                android:textSize="15sp"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/diett"
                android:textColor="@color/black"
                android:id="@+id/diet"
                android:background="?attr/selectableItemBackground"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="5sp"
            android:layout_margin="5sp"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:gravity="center"
                android:padding="5sp"
                android:textSize="15sp"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/yogaa"
                android:id="@+id/yoga"
                android:textColor="@color/black"
                android:background="?attr/selectableItemBackground"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="5sp"
            android:layout_margin="5sp"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:gravity="center"
                android:padding="5sp"
                android:textSize="15sp"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/healthh"
                android:id="@+id/health"
                android:textColor="@color/black"
                android:background="?attr/selectableItemBackground"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="5sp"
            android:layout_margin="5sp"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:gravity="center"
                android:padding="5sp"
                android:textSize="15sp"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/religionn"
                android:id="@+id/religion"
                android:textColor="@color/black"
                android:background="?attr/selectableItemBackground"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="5sp"
            android:layout_margin="5sp"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:gravity="center"
                android:padding="5sp"
                android:textSize="15sp"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/motivationn"
                android:id="@+id/motivation"
                android:textColor="@color/black"
                android:background="?attr/selectableItemBackground"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="5sp"
            android:layout_margin="5sp"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:gravity="center"
                android:padding="5sp"
                android:textSize="15sp"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/ayurvedaa"
                android:id="@+id/ayurveda"
                android:textColor="@color/black"
                android:background="?attr/selectableItemBackground"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="5sp"
            android:layout_margin="5sp"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:gravity="center"
                android:padding="5sp"
                android:textSize="15sp"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/astrologyy"
                android:id="@+id/astrology"
                android:textColor="@color/black"
                android:background="?attr/selectableItemBackground"/>

        </android.support.v7.widget.CardView>

        <!--<android.support.v7.widget.CardView-->
            <!--android:layout_row="2"-->
            <!--android:layout_column="1"-->
            <!--android:layout_columnSpan="2"-->
            <!--android:layout_columnWeight="1"-->
            <!--android:layout_rowWeight="1"-->
            <!--android:layout_margin="5sp"-->
            <!--app:cardBackgroundColor="@color/black">-->

            <!--<Button-->
                <!--android:gravity="center"-->
                <!--android:padding="5sp"-->
                <!--android:textSize="15sp"-->
                <!--android:fontFamily="sans-serif-smallcaps"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:text="@string/nextt"-->
                <!--android:id="@+id/next"-->
                <!--android:textColor="@color/white"-->
                <!--android:background="?attr/selectableItemBackground"/>-->

        <!--</android.support.v7.widget.CardView>-->

    </GridLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerview"
        android:isScrollContainer="false"
        android:visibility="gone">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>