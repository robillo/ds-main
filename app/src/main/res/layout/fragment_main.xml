<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/child_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp" />

    <com.example.sasuke.dailysuvichar.view.TabBar
        android:id="@+id/tab_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:background_color="@color/blue_text"
        app:icons_color="@color/white"
        app:image_height="@dimen/tabbar_image_height"
        app:image_width="@dimen/tabbar_image_width"
        app:select_color="@color/blue_dark"
        app:text_size="@dimen/tabbar_text_size">

        <com.example.sasuke.dailysuvichar.view.Tab
            android:id="@+id/tab_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:image_drawable="@drawable/ic_home"
            app:name="@string/home" />

        <com.example.sasuke.dailysuvichar.view.Tab
            android:id="@+id/tab_gurus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:image_drawable="@drawable/ic_guru"
            app:name="@string/gurus" />

        <com.example.sasuke.dailysuvichar.view.Tab
            android:id="@+id/tab_trending"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:image_drawable="@drawable/ic_settings"
            app:name="@string/trending" />

        <com.example.sasuke.dailysuvichar.view.Tab
            android:id="@+id/tab_explore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:image_drawable="@drawable/ic_settings"
            app:name="Explore" />

    </com.example.sasuke.dailysuvichar.view.TabBar>

</RelativeLayout>