<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sasuke.dailysuvichar">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".DailySuvicharApp"
        android:allowBackup="true"
        android:icon="@drawable/logo_transparent"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_transparent"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".activity.SplashScreen"
            android:noHistory="true"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.LoginActivity"
            android:screenOrientation="portrait"/>
        >
        <activity android:name=".activity.ChooseInterestActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.SubInterestActivity"
            android:screenOrientation="portrait"/>
        <!-- <activity -->
        <!-- android:name=".activity.HomeActivity" -->
        <!-- android:configChanges="orientation|screenSize" -->
        <!-- android:hardwareAccelerated="true" /> -->
        <activity
            android:name=".activity.SelectActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.SelectPhotoActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.SelectVideoActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.FullScreenActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.ProfileActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.GuruDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".newactivities.NewHomeyActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".newactivities.NewExploreyActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".newactivities.NewGurusActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".newactivities.NewMainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".newactivities.YourFeedsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.AboutActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>